<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.jetbrains.kotlin.activities.TournamentActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" tools:layout_editor_absoluteX="175dp" tools:layout_editor_absoluteY="159dp">
        <TextView
                android:id="@+id/currentGameTW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal" android:text="@string/current_game_title" android:textSize="30sp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/tournamentStatusTW"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp" android:layout_weight="0" android:gravity="center_horizontal"
                android:textStyle="italic"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="fragments.GameTeamFragment">
                <TextView
                    android:id="@+id/team1NameTW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal" android:text="TextView" android:textSize="24sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/team1PlayersTW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal" android:text="TextView" android:textSize="18sp"
                    android:textStyle="italic"/>
                <EditText
                    android:id="@+id/team1CupsHit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:ems="10"
                    android:gravity="center_horizontal" android:hint="@string/cups_hit_hint" android:inputType="number"/>
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="fragments.GameTeamFragment">
                <TextView
                    android:id="@+id/team2NameTW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_horizontal" android:text="TextView" android:textSize="24sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/team2PlayersTW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_horizontal" android:text="TextView" android:textSize="18sp"
                    android:textStyle="italic"/>
                <EditText
                    android:id="@+id/team2CupsHit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:ems="10"
                    android:gravity="center_horizontal" android:hint="@string/cups_hit_hint" android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
        <Button
                android:id="@+id/concludeGameBTN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0" android:gravity="center_horizontal" android:text="Button"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
